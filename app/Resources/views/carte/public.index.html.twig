{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cartes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carte in cartes %}
            <tr>
                <td><a href="{{ path('carte_public_show', { 'id': carte.id }) }}">{{ carte.id }}</a></td>
                <td>{{ carte.nom }}</td>
                <td>{{ carte.description }}</td>
                <td>{{ carte.image }}</td>
                <td>{{ carte.prix }}</td>
                <td>{{ carte.stock }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
