{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cartes list</h1>
    <h2><a href="{{ asset('http://localhost/restaurant/web/app_dev.php/choixCategorie/') }}"><em>Trier par cat√©gorie</em></a></h2>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carte in cartes %}
            <tr>
                <td><a href="{{ path('carte_public_show', { 'id': carte.id }) }}">{{ carte.nom }}</a></td>
                <td>{{ carte.description }}</td>
                <td><img src="{{ asset('bundles/app/images/' ~ carte.Image) }}" alt="menu"></td>
                <td>{{ carte.prix }}</td>
                <td><button class="panier"><a href="{{ path('carte_panier_ajout', { 'id': carte.id })}}">Ajouter au panier</a></button></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
